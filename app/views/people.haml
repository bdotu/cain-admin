%html{:lang => "en"}
  = haml :head

  %body
    = haml :navbar

    %h1 Listing Members

    -# %p{:id => "notice"}
      = flash[:notice]

    %table{:class => "table table-striped"}
      %thead
        %tr
          %th First Name
          %th Last Name
          %th Email
          %th Role
      %tbody
        - @people.each do |person|
          %tr
            %td
              = person.first_name
            %td
              = person.last_name
            %td
              = person.email
            %td
              = person.role.role_name
